{
    "openapi": "3.0.0",
    "info": {
        "title": "Pick and Pack Changes API",
        "description": "The Pick and Pack Changes API manages order modifications in a Pick an Pack order. This API supports actions like updating deadlines, adding items, modifying quantities, rejecting or replacing items, and updating item details.",
        "contact": {},
        "version": "1.0"
    },
    "servers": [
        {
            "url": "https://{accountName}.{environment}.com.br/vtex_pickandpack",
            "description": "VTEX server URL.",
            "variables": {
                "accountName": {
                    "description": "Name of the VTEX account. Used as part of the URL.",
                    "default": "apiexamples"
                },
                "environment": {
                    "description": "Environment to use. Used as part of the URL.",
                    "enum": [
                        "vtexcommercestable"
                    ],
                    "default": "vtexcommercestable"
                }
            }
        }
    ],
    "paths": {
        "/orders/{orderId}/deadline": {
            "put": {
                "summary": "Update deadline",
                "description": "Updates the deadline for an order. The min and max fields specify the deadline window, while the description provides additional information.\n\n| Field Name       | Type     | Description                                       |\n|-------------------|----------|---------------------------------------------------|\n| `UpdateDeadline*` | `object` | Contains deadline details.                        |\n| ├ `min*`          | `string` | Earliest deadline in ISO 8601 format.            |\n| ├ `max*`          | `string` | Latest deadline in ISO 8601 format.              |\n| ├ `description`  | `string` | Description of the reason or purpose.            |",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/orderId"
                    },
                    {
                        "$ref": "#/components/parameters/Accept"
                    },
                    {
                        "$ref": "#/components/parameters/Content-Type"
                    }
                    
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "allOf": [
                                    {
                                        "$ref": "#/components/schemas/UpdateDeadlineRequest"
                                    },
                                    {
                                    "example": {
                                            "description": "Extend deadline due to delayed shipment",
                                            "max": "2024-12-24T23:03:02Z",
                                            "min": "2024-12-23T23:03:02Z"
                                        }
                                    }
                                ]
                            },
                            "example": {
                                "UpdateDeadline": {
                                    "description": "Extend deadline due to delayed shipment",
                                    "max": "2024-12-24T23:03:02Z",
                                    "min": "2024-12-23T23:03:02Z"
                                }
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                },
                "deprecated": false
            }
        },
        "/order/changes": {
            "post": {
                "tags": ["Misc"],
                "summary": "Add Item",
                "description": "Adds a new item to an order, specifying the item ID, quantity, warehouse, and price details.\n\n| Field Name     | Type     | Description                                    |\n|-----------------|----------|------------------------------------------------|\n| `type*`         | `string` | Action type, must be `\"ADD_ITEM\"`.             |\n| `orderId*`      | `string` | Unique identifier for the order.               |\n| `itemId*`       | `string` | Unique identifier for the item.                |\n| `quantity*`     | `integer`| Quantity of the item.                          |\n| `warehouseId*`  | `string` | Warehouse identifier.                          |\n| `price*`        | `integer`| Total price in cents.                          |\n| `sellingPrice*` | `integer`| Selling price in cents.                        |",
                "operationId": "AddItem",
                "parameters": [],
                "requestBody": {
                    "description": "",
                    "content": {
                        "application/json": {
                            "schema": {
                                "allOf": [
                                    {
                                        "$ref": "#/components/schemas/AddItemRequest"
                                    },
                                    {
                                        "example": {
                                            "type": "ADD_ITEM",
                                            "orderId": "1481110515526-01",
                                            "itemId": "49",
                                            "quantity": 2,
                                            "warehouseId": "9029",
                                            "price": 500000,
                                            "sellingPrice": 200000,
                                            "note": "TEST from VTEX PROXY 3",
                                            "pickingOptions": {
                                                "onNotFound": "REPLACE",
                                                "alternateOptions": ["74"]
                                            }
                                        }
                                    }
                                ]
                            },
                            "example": {
                                "type": "ADD_ITEM",
                                "orderId": "1481110515526-01",
                                "itemId": "49",
                                "quantity": 2,
                                "warehouseId": "9029",
                                "price": 500000,
                                "sellingPrice": 200000,
                                "note": "TEST from VTEX PROXY 3",
                                "pickingOptions": {
                                    "onNotFound": "REPLACE",
                                    "alternateOptions": ["74"]
                                }
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "",
                        "headers": {}
                    }
                },
                "deprecated": false
            }
        }
    },
    "security": [
        {
            "appKey": [],
            "appToken": []
        },
        {
            "VtexIdclientAutCookie": []
        }
    ],
    "components": {
        "securitySchemes": {
            "appKey": {
                "type": "apiKey",
                "in": "header",
                "name": "X-VTEX-API-AppKey",
                "description": "Unique identifier of the [application key](https://developers.vtex.com/docs/guides/api-authentication-using-application-keys)."
            },
            "appToken": {
                "type": "apiKey",
                "in": "header",
                "name": "X-VTEX-API-AppToken",
                "description": "Secret token of the [application key](https://developers.vtex.com/docs/guides/api-authentication-using-application-keys)."
            },
            "VtexIdclientAutCookie": {
                "type": "apiKey",
                "in": "header",
                "name": "VtexIdclientAutCookie",
                "description": "[User token](https://developers.vtex.com/docs/guides/api-authentication-using-user-tokens), valid for 24 hours."
            }
        },
        "schemas": {
            "UpdateDeadlineRequest": {
                "required": ["UpdateDeadline"],
                "type": "object",
                "properties": {
                    "UpdateDeadline": {
                        "$ref": "#/components/schemas/UpdateDeadline"
                    }
                },
                "example": {
                    "UpdateDeadline": {
                        "description": "Extend deadline due to delayed shipment",
                        "max": "2024-12-24T23:03:02Z",
                        "min": "2024-12-23T23:03:02Z"
                    }
                }
            },
            "UpdateDeadline": {
                "title": "UpdateDeadline",
                "required": ["description", "max", "min"],
                "type": "object",
                "properties": {
                    "description": {
                        "type": "string"
                    },
                    "max": {
                        "type": "string"
                    },
                    "min": {
                        "type": "string"
                    }
                },
                "example": {
                    "description": "Extend deadline due to delayed shipment",
                    "max": "2024-12-24T23:03:02Z",
                    "min": "2024-12-23T23:03:02Z"
                }
            },
            "AddItemRequest": {
                "title": "AddItemRequest",
                "required": [
                    "type",
                    "orderId",
                    "itemId",
                    "quantity",
                    "warehouseId",
                    "price",
                    "sellingPrice",
                    "note",
                    "pickingOptions"
                ],
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "orderId": {
                        "type": "string"
                    },
                    "itemId": {
                        "type": "string"
                    },
                    "quantity": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "warehouseId": {
                        "type": "string"
                    },
                    "price": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "sellingPrice": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "note": {
                        "type": "string"
                    },
                    "pickingOptions": {
                        "$ref": "#/components/schemas/PickingOptions"
                    }
                },
                "example": {
                    "type": "ADD_ITEM",
                    "orderId": "1481110515526-01",
                    "itemId": "49",
                    "quantity": 2,
                    "warehouseId": "9029",
                    "price": 500000,
                    "sellingPrice": 200000,
                    "note": "TEST from VTEX PROXY 3",
                    "pickingOptions": {
                        "onNotFound": "REPLACE",
                        "alternateOptions": ["74"]
                    }
                }
            },
            "PickingOptions": {
                "title": "PickingOptions",
                "required": ["onNotFound", "alternateOptions"],
                "type": "object",
                "properties": {
                    "onNotFound": {
                        "type": "string"
                    },
                    "alternateOptions": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": ""
                    }
                },
                "example": {
                    "onNotFound": "REPLACE",
                    "alternateOptions": ["74"]
                }
            },
            "AddQuantityRequest": {
                "title": "AddQuantityRequest",
                "required": [
                    "type",
                    "orderId",
                    "itemId",
                    "newQuantity",
                    "unitMultiplier",
                    "reasonType",
                    "reasonDetail"
                ],
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "orderId": {
                        "type": "string"
                    },
                    "itemId": {
                        "type": "string"
                    },
                    "newQuantity": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "unitMultiplier": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "reasonType": {
                        "type": "string"
                    },
                    "reasonDetail": {
                        "type": "string"
                    }
                },
                "example": {
                    "type": "ADD_QUANTITY",
                    "orderId": "1481110515526-01",
                    "itemId": "3",
                    "newQuantity": 4,
                    "unitMultiplier": 1,
                    "reasonType": "TEST",
                    "reasonDetail": "test reason detail"
                }
            },
            "RejectItemRequest": {
                "title": "RejectItemRequest",
                "required": [
                    "type",
                    "orderId",
                    "itemId",
                    "quantity",
                    "reasonType",
                    "reasonDetail"
                ],
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "orderId": {
                        "type": "string"
                    },
                    "itemId": {
                        "type": "string"
                    },
                    "quantity": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "reasonType": {
                        "type": "string"
                    },
                    "reasonDetail": {
                        "type": "string"
                    }
                },
                "example": {
                    "type": "REJECT",
                    "orderId": "1481110515526-01",
                    "itemId": "1364",
                    "quantity": 1,
                    "reasonType": "TEST",
                    "reasonDetail": "test reason detail"
                }
            },
            "ReplaceItemRequest": {
                "title": "ReplaceItemRequest",
                "required": [
                    "type",
                    "orderId",
                    "itemToReplace",
                    "itemToAdd",
                    "reasonType",
                    "reasonDetail"
                ],
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "orderId": {
                        "type": "string"
                    },
                    "itemToReplace": {
                        "$ref": "#/components/schemas/ItemToReplace"
                    },
                    "itemToAdd": {
                        "$ref": "#/components/schemas/ItemToAdd"
                    },
                    "reasonType": {
                        "type": "string"
                    },
                    "reasonDetail": {
                        "type": "string"
                    }
                },
                "example": {
                    "type": "REPLACE",
                    "orderId": "1481110515526-01",
                    "itemToReplace": {
                        "id": "49",
                        "quantity": 1
                    },
                    "itemToAdd": {
                        "id": "17",
                        "quantity": 2,
                        "price": 20000,
                        "sellingPrice": 10000,
                        "warehouseId": "9029",
                        "note": "TEST from VTEX PROXY 1",
                        "pickingOptions": {
                            "onNotFound": "REPLACE",
                            "alternateOptions": ["74"]
                        }
                    },
                    "reasonType": "TEST",
                    "reasonDetail": "test reason detail"
                }
            },
            "ItemToReplace": {
                "title": "ItemToReplace",
                "required": ["id", "quantity"],
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "quantity": {
                        "type": "integer",
                        "format": "int32"
                    }
                },
                "example": {
                    "id": "49",
                    "quantity": 1
                }
            },
            "ItemToAdd": {
                "title": "ItemToAdd",
                "required": [
                    "id",
                    "quantity",
                    "price",
                    "sellingPrice",
                    "warehouseId",
                    "note",
                    "pickingOptions"
                ],
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "quantity": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "price": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "sellingPrice": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "warehouseId": {
                        "type": "string"
                    },
                    "note": {
                        "type": "string"
                    },
                    "pickingOptions": {
                        "$ref": "#/components/schemas/PickingOptions"
                    }
                },
                "example": {
                    "id": "17",
                    "quantity": 2,
                    "price": 20000,
                    "sellingPrice": 10000,
                    "warehouseId": "9029",
                    "note": "TEST from VTEX PROXY 1",
                    "pickingOptions": {
                        "onNotFound": "REPLACE",
                        "alternateOptions": ["74"]
                    }
                }
            },
            "UpdateItemRequest": {
                "title": "UpdateItemRequest",
                "required": [
                    "type",
                    "orderId",
                    "itemId",
                    "note",
                    "pickingOptions"
                ],
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "orderId": {
                        "type": "string"
                    },
                    "itemId": {
                        "type": "string"
                    },
                    "note": {
                        "type": "string"
                    },
                    "pickingOptions": {
                        "$ref": "#/components/schemas/PickingOptions"
                    }
                },
                "example": {
                    "type": "UPDATE_ITEM",
                    "orderId": "1479430515373-01",
                    "itemId": "1248",
                    "note": "TEST from VTEX PROXY 3",
                    "pickingOptions": {
                        "onNotFound": "REPLACE",
                        "alternateOptions": ["74"]
                    }
                }
            }
        },
        "parameters": {
            "orderId": {
                "name": "orderId",
                "in": "path",
                "description": "Unique identifier of the order.",
                "required": true,
                "style": "simple",
                "schema": {
                    "type": "string",
                    "example": "v71021948str-01"
                }
            },
            "Content-Type": {
                "name": "Content-Type",
                "in": "header",
                "description": "Type of the content being sent.",
                "required": true,
                "style": "simple",
                "schema": {
                    "type": "string",
                    "example": "application/json"
                }
            },
            "Accept": {
                "name": "Accept",
                "in": "header",
                "description": "HTTP Client Negotiation _Accept_ Header. Indicates the types of responses the client can understand.",
                "required": true,
                "style": "simple",
                "schema": {
                    "type": "string",
                    "example": "application/json"
                }
            }
        }
    }
}
